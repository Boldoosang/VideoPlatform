@using System.Security.Principal

<ul class="navbar-nav align-items-center">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <li class="nav-item">
            <span class="text-light fw-light">
                Hello, @User.Identity?.Name!
            </span>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light fw-medium" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">
                Sign out
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light fw-medium" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">
                Sign in
            </a>
        </li>
    }
</ul>
