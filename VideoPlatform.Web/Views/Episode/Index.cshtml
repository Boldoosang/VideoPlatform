@model IEnumerable<VideoPlatform.Domain.Models.Episode>

@{
    ViewData["Title"] = "Episode Management";
}

<div class="container">
    <div class="text-center text-light pb-5 pt-3">
        <h2 class="display-4 fw-bold">Episode Management</h2>
        <p class="lead">Manage the episodes available on the platform.</p>
        <a asp-action="Create" asp-controller="Episode" class="btn btn-primary rounded-pill px-5 mt-2 mb-0">
            <i class="bi bi-camera-reels me-1"></i> Create New Episode
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No episodes found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-striped table-hover align-middle mb-0">
                <thead class="bg-secondary text-light">
                    <tr>
                        <th style="width: 200px;">Title</th>
                        <th style="width: 300px;">Description</th>
                        <th class="text-center">Season</th>
                        <th>Publish Date</th>
                        <th class="text-center">Published</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="d-inline-block text-truncate" style="max-width: 200px;" title="@item.Title">
                                    @item.Title
                                </span>
                            </td>
                            <td>
                                <span class="d-inline-block text-truncate" style="max-width: 300px;" title="@item.Description">
                                    @item.Description
                                </span>
                            </td>
                            <td class="text-center">@item.Season?.SeasonNumber</td>
                            <td>@item.PublishDate.ToString("MMM dd, yyyy")</td>
                            <td class="text-center">
                                @if (item.IsPublished)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-1">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm me-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    }
</div>
