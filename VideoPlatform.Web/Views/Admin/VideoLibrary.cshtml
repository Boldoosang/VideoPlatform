@model List<Video>

@{
    var Modal = new Modal()
    {
        Title = "Delete Video",
        Id = "deleteVideoModal",
        Body = "Are you sure you want to delete this video?",
        SubmissionButton = new SubmissionButton() {
            Action = "DeleteVideo",
            Text = "Confirm Delete",
            CssClass = "btn btn-danger col-12 col-md-6",
            Controller = "Admin" ,
            Method = "post",
        }
    };
}

<h2>Video Library</h2>
<div class="row">
    @foreach (var video in Model)
    {
        <div class="col-12 col-md-4 mb-4">
            <div class="card d-flex flex-column h-100 rounded-0 rounded-bottom">
                <div class="card-body d-flex flex-column p-0">
                    <video class="w-100 p-0 m-0" controls>
                        <source src="@video.FilePath" type="video/mp4">
                    </video>
                    <div class="p-2 flex-grow-1">
                        <h5 class="card-title mt-2 mb-0">@video.Title</h5>
                        <p class="card-text mt-1 mb-3"><small class="text-muted">@video.UploadDate.ToString("MMMM dd, yyyy")</small></p>
                    </div>
                </div>
                <div class="d-flex m-2 btn-group">
                    <a asp-action="Edit" asp-controller="VideoEditor" class="btn btn-primary mt-auto col-12 col-md-6">Edit Video</a>
                    <button type="button" class="btn btn-danger mt-auto col-12 col-md-6" data-bs-toggle="modal" data-bs-data="@(video.Title)" data-bs-target="#@(Modal.Id)">
                        Delete Video
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@await Html.PartialAsync("_ModalPartial", Modal)